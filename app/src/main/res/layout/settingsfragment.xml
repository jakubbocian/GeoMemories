<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE5E9"
    android:backgroundTint="#D3C5C5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="673dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:text="Cambia Account"
            android:textColor="#070404"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonRegister6"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="540dp"
            android:backgroundTint="#E9724C"
            android:text="Privacy"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#D33F11" />

        <Button
            android:id="@+id/buttonRegister7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="414dp"
            android:backgroundTint="#E9724C"
            android:text="Assistenza"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#D33F11" />

        <Button
            android:id="@+id/buttonRegister4"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="600dp"
            android:backgroundTint="#E9724C"
            android:text="Notifiche"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#D33F11" />

        <Button
            android:id="@+id/buttonRegister2"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="480dp"
            android:backgroundTint="#E9724C"
            android:text="Sicurezza"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#D33F11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="674dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="135dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="135dp"
                android:text="Impostazioni"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="360dp"
                android:layout_marginBottom="676dp"
                android:padding="14dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:textColor="@color/black" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="177dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>